<Application x:Class="Festispec.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    
             mc:Ignorable="d"
             xmlns:local="clr-namespace:Festispec.UI"
             StartupUri="Views/RenderWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary  Source="Styling/Boxes.xaml"/>
                <ResourceDictionary  Source="Styling/Button.xaml"/>
                <ResourceDictionary  Source="Styling/Colors.xaml"/>
                <ResourceDictionary  Source="Styling/Forms.xaml"/>
                <ResourceDictionary  Source="Styling/Markup.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="Montserrat">pack://application:,,,/Assets/Montserrat/#Montserrat</FontFamily>
        </ResourceDictionary>
       
    </Application.Resources>

</Application>
