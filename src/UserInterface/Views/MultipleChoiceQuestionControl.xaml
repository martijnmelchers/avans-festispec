<UserControl x:Class="Festispec.UI.Views.MultipleChoiceQuestionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Festispec.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="280" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50" />
            <RowDefinition Height="75" />
        </Grid.RowDefinitions>
        <ListView ItemsSource="{Binding Options, RelativeSource={RelativeSource AncestorType=ListView}}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" >
                        <TextBlock Text="Antwoord 1" Width="200"/>
                        <Button Content="Verwijderen"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBox  Grid.Row="1"/>
        <Button Content="Antwoord toevoegen" Grid.Row="2" Command="{Binding AddOptionCommand}"/>
    </Grid>
</UserControl>
