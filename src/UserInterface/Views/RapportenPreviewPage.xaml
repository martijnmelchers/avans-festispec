<Page x:Class="Festispec.UI.Views.RapportenPreviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Festispec.UI.Views"
      mc:Ignorable="d" Background="#EFEFEF"
      d:DesignHeight="1011" d:DesignWidth="1920"
      Title="RapportenPreviewPage">

    <Grid>

        <ScrollViewer Margin="110,104,110,104">
            <StackPanel Name="Charts">
                <TextBlock Text="{Binding selectedFestival.FestivalName, StringFormat=INFORMATIE \{0\}}" Style="{DynamicResource Header}" Width="198"/>
                   <!--hier door de antwoorden loopen teksblok eronder knallen-->
                <TextBox />
                
            </StackPanel>
        </ScrollViewer>
        <Button Content="Genereer Rapport" Style="{DynamicResource ButtonGreen}"  Height="45" Width="199" Margin="861,926,860,0" VerticalAlignment="Top"/>
        <TextBlock Text="{Binding selectedFestival.FestivalName, StringFormat='INFORMATIE {0}'}" Style="{DynamicResource Header}" HorizontalAlignment="Center" Margin="0,28,0,0" VerticalAlignment="Top" Width="198"/>
    </Grid>
</Page>
