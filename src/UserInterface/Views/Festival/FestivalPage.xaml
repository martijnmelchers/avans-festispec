<Page x:Class="Festispec.UI.Views.FestivalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Festispec.UI.Views"
      xmlns:Converters="clr-namespace:Festispec.UI.Converters"
      xmlns:controls="clr-namespace:Festispec.UI.Views.Controls"
      mc:Ignorable="d"
      d:DesignHeight="1011" d:DesignWidth="1920"
      Title="FestivalPage">
    <Page.Resources>
        <Converters:HasQuestionsConverter x:Key="HasQuestionsConverter" />
        <Converters:TextTrimmerConverter x:Key="TextTrimmerConverter" />
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Linker Kolom -->
        <Rectangle Style="{DynamicResource ContentBox}" Width="550" Height="850"/>
        <Grid Width="500" Height="800" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="75"/>
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding Festival.FestivalName, Converter={StaticResource UpperCaseConverter}, StringFormat='INFORMATIE {0}'}"
                       Style="{DynamicResource Header}" Grid.Column="0" Grid.Row="0"/>
            <controls:TextUnderline Grid.Row="0" Grid.Column="0" />

            <Image Source="{StaticResource LocationGreen}" Height="24" Width="20" HorizontalAlignment="Left" Grid.Row="1" />
            <Label Content="Locatie" VerticalContentAlignment="Center" Height="50" HorizontalAlignment="Left" Width="150" Grid.Row="1" Margin="30,0,0,0"/>
            <Label Content="{Binding FestivalLocation}" Grid.Row="2" FontWeight="Light"/>

            <Image Source="{StaticResource CalendarGreen}" Height="24" Width="20" HorizontalAlignment="Left" Grid.Row="3" />
            <Label Content="Festivaldata" VerticalContentAlignment="Center" Height="50" HorizontalAlignment="Left" Width="150" Grid.Row="3" Margin="30,0,0,0"/>
            <Label Content="{Binding FestivalData}" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="4" FontWeight="Light"/>

            <Image Source="{StaticResource ClockGreen}" Height="24" Width="20" HorizontalAlignment="Left" Grid.Row="5"/>
            <Label Content="Festivaltijden" VerticalContentAlignment="Center" Height="50" HorizontalAlignment="Left" Width="150" Grid.Row="5" Margin="30,0,0,0" />
            <Label Content="{Binding FestivalTimes}" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="6" FontWeight="Light" />

            <Image Source="{StaticResource EditGreen}" Height="24" Width="20" HorizontalAlignment="Left" Grid.Row="7"/>
            <Label Content="Beschrijving" VerticalContentAlignment="Center" Height="50" HorizontalAlignment="Left" Width="150" Grid.Row="7" Margin="30,0,0,0"/>
            <Label HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="8" FontWeight="Light" Width="450">
                <TextBlock Text="{Binding Festival.Description}" TextWrapping="Wrap" />
            </Label>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="11">
                <Button Command="{Binding RemoveFestivalCommand}"
                        Style="{DynamicResource ButtonRed}" MinWidth="50" Width="50" Height="50" Margin="0,0,10,0">
                    <Button.Content>
                        <Image Height="25" Source="{StaticResource TrashcanWhite}" />
                    </Button.Content>
                </Button>

                <Button Content="Wijzigen" Command="{Binding EditFestivalCommand}" 
                        Style="{DynamicResource ButtonGreen}" Height="50" Width="190" Margin="0,0,10,0" />

                <Button Content="Rapport" Command="{Binding GenerateReportCommand}"
                        Style="{DynamicResource ButtonGreen}" Height="50" Width="190" Margin="0,0,10,0" />
            </StackPanel>
        </Grid>




        <!-- Middelste Kolom -->
        <Rectangle Style="{DynamicResource ContentBox}" Grid.Column="1" Margin="795,50,618,80" />

        

        

        <!-- POP UPS -->
        <Popup x:Name="CreateQuestionnairePopUp" Placement="Center" AllowsTransparency="True" Width="550">
            <Border Padding="30" CornerRadius="5" Background="White" BorderBrush="#CFCFCF" BorderThickness="3">
                <StackPanel Orientation="Vertical" Background="White">
                    <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                        <TextBlock Text="NIEUWE VRAGENLIJST" Style="{DynamicResource Header}" />
                        <Rectangle HorizontalAlignment="Left" Height="7" Width="120" RadiusY="2.5" RadiusX="2.5"
                                   Fill="#FF4A4A" />
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                        <Label Content="Naam" />
                        <TextBox HorizontalAlignment="Left" Text="{Binding QuestionnaireName}" Width="475" Height="50" />
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Button HorizontalAlignment="Left" Content="Annuleren" Style="{DynamicResource ButtonRed}"
                                Click="ToggleNewQuestionnairePopUp" Height="50" Width="185" Grid.Column="0" />
                        <Button HorizontalAlignment="Right" Content="Aanmaken" Style="{DynamicResource ButtonGreen}"
                                Click="ToggleNewQuestionnairePopUp" Command="{Binding CreateQuestionnaireCommand}"
                                Height="50" Width="185" Grid.Column="2" />
                    </Grid>

                </StackPanel>
            </Border>
        </Popup>

        <Popup x:Name="DeleteQuestionnairePopUp" Placement="Center" AllowsTransparency="True" Width="550">
            <Border Padding="30" CornerRadius="5" Background="White" BorderBrush="#CFCFCF" BorderThickness="3">
                <StackPanel Orientation="Vertical" Background="White">
                    <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                        <TextBlock Text="WEET JE HET ZEKER?" Style="{DynamicResource Header}" />
                        <Rectangle HorizontalAlignment="Left" Height="7" Width="120" RadiusY="2.5" RadiusX="2.5"
                                   Fill="#FF4A4A" />
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                        <TextBlock Style="{DynamicResource DefaultText}"
                                   Text="Weet je zeker dat je deze vragenlijst wilt verwijderen? Deze actie kan niet teruggedraaid worden."
                                   TextWrapping="Wrap" />
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Button HorizontalAlignment="Left" Content="Annuleren" Style="{DynamicResource ButtonGreen}"
                                Click="ToggleDeleteQuestionnairePopUp" Height="50" Width="185" Grid.Column="0" />
                        <Button HorizontalAlignment="Right" Content="Verwijderen" Style="{DynamicResource ButtonRed}"
                                Click="ToggleDeleteQuestionnairePopUp"
                                Command="{Binding ConfirmDeleteQuestionnaireCommand}" Height="50" Width="185"
                                Grid.Column="2" />
                    </Grid>

                </StackPanel>
            </Border>
        </Popup>
    </Grid>


</Page>