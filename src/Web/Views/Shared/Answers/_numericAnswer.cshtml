@model Festispec.Models.Answers.NumericAnswer

<h4>@Model.Question.Contents</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveNumericAnswer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="PlannedInspection.Id" type="hidden" />
            <input name="QuestionId" type="hidden" value="@Model.Question.Id" />
            <div class="form-group">
                <input asp-for="IntAnswer" class="form-control" min="@((Model.Question as Festispec.Models.Questions.NumericQuestion).Minimum)" max="@((Model.Question as Festispec.Models.Questions.NumericQuestion).Maximum)" />
                <span asp-validation-for="IntAnswer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Id" class="form-control" value="@Model.Id" type="hidden" />
            </div>
            <div class="form-group">
                <input type="submit" value="Opslaan" class="green-button" />
            </div>
        </form>
    </div>
</div>


