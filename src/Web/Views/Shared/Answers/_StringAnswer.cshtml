@model Festispec.Models.Answers.StringAnswer
@Html.ValidationSummary(true)

<h4>@Model.Question.Contents</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveStringAnswer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="PlannedInspection.Id" type="hidden" />
            <input name="QuestionId" type="hidden" value="@Model.Question.Id" />
            <div class="form-group">
                @Html.TextAreaFor(e => e.AnswerContents)
                <span asp-validation-for="AnswerContents" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="@Model.Id" class="form-control" value="@Model.Id" type="hidden" />
            </div>
            <div class="form-group">
                <input type="submit" value="Opslaan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
