@model Festispec.Models.Answers.MultipleChoiceAnswer

<h4>@Model.Question.Contents</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveMultipleChoiceAnswer">
            @Html.HiddenFor(e => e.PlannedInspection.Id)
            <input name="QuestionId" type="hidden" value="@Model.Question.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                @{ (Model.Question as Festispec.Models.Questions.MultipleChoiceQuestion).StringToObjects();}
                @for (int i = 0; i < (Model.Question as Festispec.Models.Questions.MultipleChoiceQuestion).OptionCollection.Count; i++)
                {
                    <div class="form-check">
                        @Html.RadioButtonFor(e => e.MultipleChoiceAnswerKey, i, new { @class = "form-check-input radio" })<label class="form-check-label">@((Model.Question as Festispec.Models.Questions.MultipleChoiceQuestion).OptionCollection[i]) </label> <br />
                    </div>
                }
            </div>

            <div class="form-group">
                <input asp-for="Id" class="form-control" type="hidden" value="@Model.Id" />
            </div>
            <div class="form-group">
                <input type="submit" value="Opslaan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



