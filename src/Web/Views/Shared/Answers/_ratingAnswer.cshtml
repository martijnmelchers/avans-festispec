@model Festispec.Models.Answers.NumericAnswer

    <h4>@Model.Question.Contents</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveNumericAnswer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="PlannedInspection.Id" type="hidden" />
            <input name="QuestionId" type="hidden"  value="@Model.Question.Id"/>
            <div class="rating">
                @for (int i = 1; i < 6; i++)
                {
                    <label>
                        @Html.RadioButtonFor(e => e.IntAnswer, i, new { @class = "form-check-input radio" })
                        @for (int y = 0; y < i; y++)
                        {
                            <span class="icon">☆</span>
                        }
                    </label>
                }
            </div>
            <div class="form-group">
                <input asp-for="Id" class="form-control" type="hidden" value="@Model.Id" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Opslaan" class="green-button" />
            </div>
        </form>
    </div>
</div>


